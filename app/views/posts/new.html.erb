<div class="wrapper">
  <div class="navigation">
    <div class="navigationBlockStart">
      <span><%= link_to "Home", posts_path, class: "navigationItem" %></span>
      <span><%= link_to "Add post", posts_new_path, class: "navigationItem" %></span>
      <span><%= link_to "About developer", about_me_path, class: "navigationItem" %></span>
    </div>
    <div class="navigationBlockEnd">
      <span><%= link_to "Log out", "/auth/logout", method: "post", class: "navigationItem" %></span>
    </div>

  </div>
  <div class="title">
    <h1>Create new post</h1>
  </div>
  <form class="formContainer" method="POST" action="/posts/save" enctype="multipart/form-data">
    <%= token_tag %>

    <div class="formItem">
      <label class="formLabel" for="header">Title<br></label>
      <input class="headerInputField" type="text" name="header">
    </div>
    <div class="formItem">
      <label class="formLabel" for="body">Post Content<br></label>
      <textarea class="inputField" name="body" cols="30" rows="10"></textarea>
    </div>
    <div>
      <div><input class="submitButton" type="submit" value="Create Post"></div>
    </div>
  </form>
</div>